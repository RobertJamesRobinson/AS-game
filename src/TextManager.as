		//clear all children of the canvas object and reset the cursor to 0,0
		public function clear():void
		{
			var items:int=canvas.numChildren;
			
			cursorX=0;
			cursorY=0;
			
			//iterate through the children of the canvas and remove each one
			for(var i:int=0;i<items;i++)
			{
				canvas.removeChildAt((items-1)-i);
			}
		}
		//perform a carriage return by moving the cursor to the left and one line down
		private function carriageReturn():void
		{
			cursorX=0;
			cursorY+=(textHeight+yOffset);
		}
		public function lineSpacing(n:Number):void
		{
			yOffset=n;
		}
		//add the given bitmap to the canvas by copying the bitmap data (so many instances of a character can be displayed)
		private function addDigit(digit:Bitmap):void
		{
			//create a new bitmap from the bitmap data of the given bitmap
			var newDigit:Bitmap=new Bitmap(digit.bitmapData);
			
			//scale the font
			newDigit.scaleX=scaleFactor;
			newDigit.scaleY=scaleFactor;
			
			//set the new bitmap at the current cursor position
			newDigit.x=cursorX;
			newDigit.y=cursorY;
			
			//move the cursor along by the width of the bitmap
			cursorX+=newDigit.width;
			
			//add the new bitmap to the canvas
			canvas.addChild(newDigit);
		}
